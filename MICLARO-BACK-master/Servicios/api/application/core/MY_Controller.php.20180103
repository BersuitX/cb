            $reqJSON=$this->load->view("Request/".$this->metodo,$data,true);
        }
        $log["url"] = $urlServicio;
        $log["reqXML"] = $reqJSON;
            
        //return array("error"=>1,"response"=>$reqJSON,"metodo"=>$this->metodo,"data"=>$data);

