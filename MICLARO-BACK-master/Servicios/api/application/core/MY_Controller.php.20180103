    function rest_post($data,$canal){
		
		$log = array("request"=>$data,"canal"=>$canal,"metodo"=>$this->metodo,"httpVerb"=>"POST","tipoServicio"=>"REST");
		
        $starttime = microtime(true);

        $urlServicio=$this->servicios[$this->metodo];
